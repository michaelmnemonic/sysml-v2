{
  "lsp": {
    "basedpyright": {
      "python": {
        "pythonPath": ".venv/bin/python"
      }
    },
    "nil": {
      "settings": {
        "diagnostics": {
          "ignored": ["unused_binding"]
        }
      }
    }
  },
  "pyright": {
    "settings": {
      "python": {
        "pythonPath": ".venv/bin/python"
      }
    }
  },
  "languages": {
    "Nix": {
      "language_servers": ["nil", "!nixd"],
      "formatter": {
        "external": {
          "command": "alejandra", // or "nixfmt"
          "arguments": ["--quiet", "--"]
        }
      }
    }
  }
}
